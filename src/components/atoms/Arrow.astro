---
interface Props {
  className?: string;
  color?: keyof typeof colorClasses;
}
const { className, color = 'black' } = Astro.props;

const colorClasses = {
  black: '#000',
  white: '#fff',
  beige: '#B3AAA1',
  gold: '#9E926F',
};

const resolvedColor = colorClasses[color];
const baseClass = 'w-24 h-24';
const combinedClass = className ? `${baseClass} ${className}` : baseClass;
