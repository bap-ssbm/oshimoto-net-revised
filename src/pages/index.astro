</Layout>
<script>
  const $anchorTxt = document.querySelectorAll('.anchorTxt');
  const $sectionScroll = document.querySelector('.js-sectionScroll');
  const $sections = $sectionScroll?.querySelectorAll('.js-section');
  $sections?.forEach((section) => {
    const sectionObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            $anchorTxt.forEach((anchorTxt) => {
              const anchor = anchorTxt.getAttribute('data-anchor');
              entry.target.classList.add('is-active');
              if (anchor === section.getAttribute('data-anchor')) {
                anchorTxt.classList.add('is-active');
              } else {
                entry.target.classList.remove('is-active');
                anchorTxt.classList.remove('is-active');
              }
            });
          }
        });
      },
      {
        rootMargin: '0px',
        threshold: 0.5,
      }
    ).observe(section);
  });
</script>
<style lang='scss' is:global>
  .anchorTxt {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    &.is-active {
      opacity: 1;
    }
  }
  .js-section {
    opacity: 0.8;
    filter: grayscale(80%);
    transition: 0.3s ease-in-out;
    &.is-active {
      opacity: 1;
      filter: grayscale(0%);
    }
  }
</style>
